<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="UserTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/UserActionBar</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- ActionBar styles -->
    <style name="UserActionBar"
        parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/purple</item>
        <item name="android:titleTextStyle">@style/UserActionBarTextStyle</item>
    </style>

    <!-- Agent application theme. -->
    <style name="AgentTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/AgentActionBar</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- ActionBar styles -->
    <style name="AgentActionBar"
        parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/orange</item>
        <item name="android:titleTextStyle">@style/UserActionBarTextStyle</item>
    </style>

    <style name="UserActionBarTextStyle"
        parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/activity_actionbar_title</item>
    </style>
</resources>
