<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.karlbuha.serviceme.ProfilePage"
    android:id="@+id/mainRelativeLayout">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_marginBottom="@dimen/button_bar_height"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profileLinearLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/profile_name"
                android:id="@+id/nameTextView" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/profileNameEditText"
                android:textSize="@dimen/activity_input_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/contact_pref_label"
                android:id="@+id/contactPrefTextView" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_check_box"
                android:id="@+id/phoneCheckBox"
                android:layout_marginLeft="@dimen/checkbox_left_margin"
                android:layout_marginStart="@dimen/checkbox_left_margin"
                android:layout_marginTop="@dimen/checkbox_top_margin"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_chat_check_box"
                android:id="@+id/chatCheckBox"
                android:layout_marginLeft="@dimen/checkbox_left_margin"
                android:layout_marginStart="@dimen/checkbox_left_margin"
                android:layout_marginTop="@dimen/checkbox_top_margin"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_email_check_box"
                android:id="@+id/emailCheckBox"
                android:layout_marginLeft="@dimen/checkbox_left_margin"
                android:layout_marginStart="@dimen/checkbox_left_margin"
                android:layout_marginTop="@dimen/checkbox_top_margin"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:id="@+id/emailLinearLayout"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/profile_email"
                    android:id="@+id/emailTextView" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/emailEditText"
                    android:hint="@string/profile_email_hint"
                    android:textSize="@dimen/activity_input_text"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:id="@+id/agentSelectionLinearLayout"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/agent_setup_text"
                    android:id="@+id/agentSetupTextView" />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/beAnAgentRadioGroup"
                    android:weightSum="3">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/none_radio_button_text"
                        android:id="@+id/noneRadioButton"
                        android:onClick="NoneRadioButtonClick"
                        android:checked="true"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/agent_yes_radio_button_text"
                        android:id="@+id/agentRadioButton"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/agent_manager_radio_button_text"
                        android:id="@+id/agentManagerRadioButton"
                        android:layout_weight="1" />
                </RadioGroup>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/agentLandingPageLinearLayout"
                    android:visibility="visible">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/agent_landing_page"
                        android:id="@+id/agentLandingPageTextView" />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/landingPagePrefRadioGroup"
                        android:weightSum="3">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/client_radio_button_text"
                            android:id="@+id/clientPageRadioButton"
                            android:checked="true"
                            android:layout_weight="1" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/agent_radio_button_text"
                            android:id="@+id/agentPageRadioButton"
                            android:layout_weight="1"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/manager_radio_button_text"
                            android:id="@+id/managerPageRadioButton"
                            android:layout_weight="1" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/add_email_address"
                android:id="@+id/addEmailAddressButton"
                android:background="@color/transparent"
                android:onClick="AddEmailButtonOnClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_address"
                android:id="@+id/addAddressButton"
                android:background="@color/transparent"
                android:onClick="AddAddressButtonOnClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_payment_details"
                android:id="@+id/addPaymentDetailsButton"
                android:background="@color/transparent"
                android:onClick="AddPaymentDetailsButtonOnClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/be_an_agent"
                android:id="@+id/beAnAgentButton"
                android:background="@color/transparent"
                android:onClick="BeAAgentButtonOnClick"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/profilePageButtonLinearLayout"
        android:weightSum="1"
        android:background="@color/black"
        style="?android:attr/buttonBarStyle">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_bar_height"
            android:text="@string/done_text_button"
            android:id="@+id/doneButton"
            android:textSize="@dimen/activity_full_screen_button"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:onClick="DoneButtonOnClick"/>
    </LinearLayout>
</RelativeLayout>
